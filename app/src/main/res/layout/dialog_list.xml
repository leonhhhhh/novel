<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="295dp" android:background="@android:color/white"
            android:layout_height="wrap_content" android:orientation="vertical"
            android:layout_marginTop="35dp" android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            tools:ignore="UselessParent">
            <TextView android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp" android:text="@string/tips"
                android:textColor="@color/color_393129"
                android:layout_marginTop="18dp"
                android:layout_gravity="center_horizontal"
                />
            <View
                android:layout_width="40dp" android:layout_marginTop="15dp"
                android:layout_height="3dip" android:background="@color/color_cfcecc" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" android:clickable="true"
                android:textColor="@color/color_b1aeab" android:focusable="true"
                android:text="@string/cancel" android:layout_gravity="center_horizontal"
                android:layout_marginTop="11dp" />
            <View
                android:layout_width="10dp"
                android:layout_height="17dp" />
        </LinearLayout>
</LinearLayout>